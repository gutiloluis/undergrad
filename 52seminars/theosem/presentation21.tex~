\frametitle{Propagaci\'on del Ruido}
\begin{figure}[p]
    \centering
    \includegraphics[width=0.8\textwidth]{pedtitle.png}\\
    \tiny \cite{pedraza05}.
\end{figure}

\begin{figure}[p]
